datasource db {
  provider = "postgresql" // Puedes cambiar a "mysql" o "sqlite" seg√∫n la base de datos que uses
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  name     String
  cartItems CartItem[]
}

model Product {
  id        Int       @id @default(autoincrement())
  name      String
  price     Float
  quantity  Int
  cartItems CartItem[]
}

model CartItem {
  id         Int      @id @default(autoincrement())
  quantity   Int
  totalPrice Float
  userId     Int
  productId  Int
  user       User     @relation(fields: [userId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])
}
